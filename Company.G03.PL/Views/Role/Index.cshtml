@model IEnumerable<RoleToReturnDto>
@{
	ViewData["Title"] = "Index";
}

<h1>All Users</h1>

<br />
<br />

<form class="mb-3">
	<div class="row">
		<div class="col-6">
			<input Placeholder="Search By Name" name="SearchInput" id="SearchInput" class="form-control" />
		</div>
		<div class="col-6">
			<input type="submit" class="btn btn-success" value="Search" />
		</div>
	</div>
</form>

<a asp-action="Create" asp-controller="Role" class="btn btn-primary">Create Role</a>

<br />
<br />

@if (Model.Count() > 0)
{
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<partial name="_ButtonPartialView" model="@item.Id" />
				</tr>
			}
		</tbody>
	</table>

}
else
{
	<div class="mt-4 alert alert-warning">
		<h4>
			There are no Users :(
		</h4>
	</div>
}

