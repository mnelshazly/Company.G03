@model Department

@{
    ViewData["Title"] = "Details";
}

<h1>Details Page</h1>

<br />
<br />

<form asp-action="Edit">
    <div class="my-3">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control" value="@Model.Code" readonly/>
    </div>
    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" value="@Model.Name" readonly/>
    </div>
    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label"></label>
        <input asp-for="CreateAt" class="form-control" value="@Model.CreateAt.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
    </div>
    <div class="my-3">
        <input type="submit" value="Edit" class="btn btn-warning" />
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</form>